<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/game_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/first_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/iv_tc_country_flag"
        android:layout_toStartOf="@+id/iv_tc_country_flag"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_tc_shield"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/tv_tc_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:textColor="@color/colorItemTexto"
            android:textSize="16sp" />

        <include layout="@layout/stars" />
    </LinearLayout>

    <include layout="@layout/game_settings"
        android:id="@+id/game_settings"/>

    <LinearLayout
        android:id="@+id/second_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@+id/iv_tv_country_flag"
        android:layout_toRightOf="@+id/iv_tv_country_flag"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_tv_shield"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/tv_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:textColor="@color/colorItemTexto"
            android:textSize="16sp" />

        <include layout="@layout/stars" />
    </LinearLayout>

</RelativeLayout>
